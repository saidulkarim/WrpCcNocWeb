@using WrpCcNocWeb.Helpers

@{
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
    CcModAppProjectCommonDetail pcd = (CcModAppProjectCommonDetail)ViewData["ProjectCommonDetail"];
    CcModAppProject_31_IndvDetail project31indev = (CcModAppProject_31_IndvDetail)ViewData["ProjectIndvDetail31"];

    //List<CcModPrjLocationDetail> location = (CcModPrjLocationDetail)ViewData["ProjectLocationDetail"];

    var location = ViewData["ProjectLocationDetail"];
    var prev_lang = ViewData["LanguageId"].ToString();
    //var hrd = ViewData["HydroRegionDetail"];
    var hsd = ViewData["BDP2100HotSpotDetail"];
    var hydrosys = ViewData["HydroSystemDetail"];
    var tofd = ViewData["TypesOfFloodDetail"];
    var ffd = ViewData["FloodFrequencyDetail"];
    var icad = ViewData["IrrigCropAreaDetail"];
    var aodt = ViewData["AnalyzeOptionsDetail"];
    var dsd = ViewData["DesignSubmitDetail"];
    var efad = ViewData["EcoFinAnalysisDetail"];
    var eiad = ViewData["EiaDetailTemp"];
    var siad = ViewData["SiaDetailTemp"];

    var cnwpd = ViewData["CompatNWPDetail"];
    var cnwmpd = ViewData["CompatNWMPDetail"];
    var sdgd = ViewData["CompatSDGDetail"];
    var sdgid = ViewData["CompatSDGIndiDetail"];
    var bdp2100gd = ViewData["BDP2100GoalDetail"];
    var gpwmgtd = ViewData["GPWMGroupType"];

    long ProjectId = (long)ViewData["ProjectId"];
    long Project31IndvId = (long)ViewData["Project31IndvId"];
    long UserId = (long)ViewData["UserId"];
    int ProjectTypeId = (int)ViewData["ProjectTypeId"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <input id="pProjectId" type="hidden" />
                <input id="pProject31IndvId" type="hidden" />
                <input id="pUserId" type="hidden" value="@UserId" />
                <input id="pProjectTypeId" type="hidden" />

                <center>
                    <div class="col-md-12 text-center">
                        <h3 class="HeaderTitle">
                            @if (prev_lang == "1")
                            {<span>ছাড়পত্রের সনদের জন্য আবেদন</span>}
                            else
                            {<span>Application for Clearance Certificate</span>}
                        </h3>
                        <h4 class="HeaderSubTitle">
                            (
                            @if (prev_lang == "1")
                            {<span>বন্যা নিয়ন্ত্রণ/ পরিচালনা</span>}
                            else
                            {<span>(Flood Control/ Management Project)</span>}
                            )
                        </h4>
                    </div>
                </center>

                <div id="form-preview" class="form-preview container">
                    <div class="row lineGap">
                        <div class="col">
                            <span>
                                @if (prev_lang == "1")
                                {<span>বরাবর</span>}
                                else
                                {<span>To</span>}
                            </span><br />
                            <span>
                                @if (prev_lang == "1")
                                {<span>কার্যনির্বাহী কমিটি</span>}
                                else
                                {<span>Executive Committee</span>}
                            </span><br />
                            <span>
                                @if (prev_lang == "1")
                                {<span>ন্যাশনাল ওয়াটার রিসোর্সেস প্রজেক্ট কমিটি।</span>}
                                else
                                {<span>National Water Resources Project Committee.</span>}
                            </span>
                        </div>
                    </div>

                    <br />

                    <div class="row lineGap">
                        <div class="col">
                            <p>
                                @if (prev_lang == "1")
                                {<strong>মাধ্যম:</strong>}
                                else
                                {<strong>Through:</strong>}

                                @if (prev_lang == "1")
                                {<span>মহাপরিচালক, জল সম্পদ পরিকল্পনা সংস্থা।</span>}
                                else
                                {<span>Director General, Water Resources Planning Organization.</span>}
                            </p>
                        </div>
                    </div>

                    <br />

                    <div class="row lineGap">
                        <div class="col">
                            <p>
                                @if (prev_lang == "1")
                                {<span>আমি, নীচে স্বাক্ষরিত, বন্যা নিয়ন্ত্রণ/ পরিচালনা সম্পর্কিত একটি প্রকল্প শুরু এবং বাস্তবায়নে ইচ্ছুক এবং আমি এখানে প্রাসঙ্গিক সংযুক্তিগুলির সাথে ছাড়পত্রের জন্য অনুরোধ করছি।</span>}
                                else
                                {<span>I, the undersigned, willing to initiate and implement a project on Flood Control/Management, And I am hereby requesting for clearance certificate with relevant attachments.</span>}
                            </p>
                        </div>
                    </div>

                    <br />

                    <div class="row lineGap">
                        <div class="col-md-12">
                            <h4>
                                <strong>
                                    @if (prev_lang == "1")
                                    {<span>আবেদনকারীর পুরো নাম এবং ঠিকানা:</span>}
                                    else
                                    {<span>Full Name and Address of Applicant:</span>}
                                </strong>
                            </h4>

                            @if (prev_lang == "1")
                            {
                                @ViewData["ApplicantNameBn"].ToString()<br />
                                @ViewData["ApplicantAddressBn"].ToString()<br />
                                <span>যোগাযোগ:</span> @ViewData["ApplicantMobileBn"].ToString()<br />
                                <span>ইমেইল:</span> @ViewData["ApplicantEmail"].ToString()
                            }
                            else
                            {
                                @ViewData["ApplicantName"].ToString()<br />
                                @ViewData["ApplicantAddress"].ToString()<br />
                                <span>Mobile:</span> @ViewData["ApplicantMobile"].ToString()<br />
                                <span>Email:</span> @ViewData["ApplicantEmail"].ToString()
                            }
                        </div>
                    </div>

                    <br />

                    <table style="border: 1px solid #808080;" border="1" cellpadding="0" cellspacing="0">
                        <tr>
                            <td colspan="3">
                                <h4>
                                    @if (prev_lang == "1")
                                    {<span>১. সাধারণ তথ্য</span>}
                                    else
                                    {<span>A. General Information</span>}
                                </h4>
                            </td>
                        </tr>

                        <tr style="vertical-align: top; text-align: left;">
                            <td style="width: 250px;">
                                <b>
                                    @if (prev_lang == "1")
                                    {<span>i. প্রকল্পের নাম</span>}
                                    else
                                    {<span>i. Project Name</span>}
                                </b>
                            </td>
                            <td style="width: 500px; word-wrap: break-word;">@pcd.ProjectName</td>
                            <td style="word-wrap: break-word;">
                                1. General Information. General Information. General Information. General Information<br />
                                2. General Information. General Information. General Information. General Information<br />
                            </td>
                        </tr>

                        <tr style="vertical-align: top; text-align: left;">
                            <td style="width: 250px;">
                                <b>
                                    @if (prev_lang == "1")
                                    {<span>ii. প্রকল্পের পূর্ব ইতিহাস ও যৌক্তিকতা</span>}
                                    else
                                    {<span>ii. Project Background and Rationale</span>}
                                </b>
                            </td>
                            <td style="width: 500px; word-wrap: break-word;">@pcd.BackgroundAndRationale</td>
                            <td style="word-wrap: break-word;">
                                1. General Information. General Information. General Information. General Information<br />
                                2. General Information. General Information. General Information. General Information<br />
                            </td>
                        </tr>
                        <tr style="vertical-align: top; text-align: left;">
                            <td style="width: 250px;">
                                <b>
                                    @if (prev_lang == "1")
                                    {<span>iii. প্রকল্পের লক্ষ্য</span>}
                                    else
                                    {<span>iii. Project Target</span>}
                                </b>
                            </td>
                            <td style="width: 500px; word-wrap: break-word;">@pcd.ProjectTarget</td>
                            <td style="word-wrap: break-word;">
                                control_comments
                            </td>
                        </tr>

                        <tr style="vertical-align: top; text-align: left;">
                            <td style="width: 250px;">
                                <b>
                                    @if (prev_lang == "1")
                                    {<span>iv. প্রকল্পের উদ্দেশ্য</span>}
                                    else
                                    {<span>iv. Project Objective</span>}
                                </b>
                            </td>
                            <td style="width: 500px; word-wrap: break-word;">@pcd.ProjectObjective</td>
                            <td style="word-wrap: break-word;">
                                control_comments
                            </td>
                        </tr>
                        <tr style="vertical-align: top; text-align: left;">
                            <td style="width: 250px;">
                                <b>
                                    @if (prev_lang == "1")
                                    {<span>v. প্রকল্প ব্যয়</span>}
                                    else
                                    {<span>v. Estimated Project Cost</span>}
                                </b>
                            </td>
                            <td style="width: 500px; word-wrap: break-word;">
                                @if (prev_lang == "1")
                                {<span>@pcd.ProjectEstimatedCost.ToString().NumberEnglishToBengali()</span>}
                            else
                            {<span>@pcd.ProjectEstimatedCost</span>}
                            </td>
                            <td style="word-wrap: break-word;">
                                control_comments
                            </td>
                        </tr>
                        <tr style="vertical-align: top; text-align: left;">
                            <td style="width: 250px;">
                                <b>
                                    @if (prev_lang == "1")
                                    {<span>vi. প্রকল্প সময়কাল</span>}
                                    else
                                    {<span>vi. Project Period</span>}
                                </b>
                            </td>
                            <td style="width: 500px; word-wrap: break-word;">
                                @if (prev_lang == "1")
                                {
                                    <span>প্রাম্ভিক কাল: @pcd.ProjectStartDate.Value.ToString("dd MMMM, yyyy").MonthEnglishToBengali().NumberEnglishToBengali()</span>
                                }
                                else
                                {
                                    <span>Starting Time: @pcd.ProjectStartDate.Value.ToString("dd MMMM, yyyy")</span>
                                }

                                <br />

                                @if (prev_lang == "1")
                                {
                                    <span>সমাপ্তি কাল: @pcd.ProjectCompletionDate.Value.ToString("dd MMMM, yyyy").MonthEnglishToBengali().NumberEnglishToBengali()</span>
                                }
                                else
                                {
                                    <span>Completion Time: @pcd.ProjectCompletionDate.Value.ToString("dd MMMM, yyyy")</span>
                                }
                            </td>
                            <td style="word-wrap: break-word;">
                                control_comments
                            </td>
                        </tr>
                        <tr style="vertical-align: top; text-align: left;">
                            <td colspan="3">
                                <b>
                                    @if (prev_lang == "1")
                                    {<span>vii. প্রকল্পের অবস্থান</span>}
                                    else
                                    {<span>vii. Project Location</span>}
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <table style="width:100%; border: 1px solid #808080; text-align: center;" border="1">
                                    <thead style="background: #9d9b9b; font-weight: bold;">
                                        <tr>
                                            <th class="text-center">
                                                @if (prev_lang == "1")
                                                {<span>ইউনিয়ন</span>}
                                                else
                                                {<span>Union</span>}
                                            </th>
                                            <th class="text-center">
                                                @if (prev_lang == "1")
                                                {<span>উপজেলা</span>}
                                                else
                                                {<span>Upazila</span>}
                                            </th>
                                            <th class="text-center">
                                                @if (prev_lang == "1")
                                                {<span>জেলা</span>}
                                                else
                                                {<span>District</span>}
                                            </th>
                                            <th class="text-center">
                                                @if (prev_lang == "1")
                                                {<span>অক্ষাংশ</span>}
                                                else
                                                {<span>Latitude</span>}
                                            </th>
                                            <th class="text-center">
                                                @if (prev_lang == "1")
                                                {<span>দ্রাঘিমাংশ</span>}
                                                else
                                                {<span>Longitude</span>}
                                            </th>
                                            <th class="text-center">
                                                @if (prev_lang == "1")
                                                {<span>সংযুক্তি</span>}
                                                else
                                                {<span>Attchments</span>}
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbodyProjectLocationPreview">
                                        @foreach (ProjectLocationTemp loc in location as List<ProjectLocationTemp>)
                                        {
                                            if (prev_lang == "1")
                                            {
                                                <tr>
                                                    <td>@loc.UnionNameBn</td>
                                                    <td>@loc.UpazilaNameBn</td>
                                                    <td>@loc.DistrictNameBn</td>
                                                    <td>@loc.LatitudeBn</td>
                                                    <td>@loc.LongitudeBn</td>
                                                    <td><a href="@loc.ImageFileName" target="_blank">@loc.OnlyImageFileName</a></td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td>@loc.UnionName</td>
                                                    <td>@loc.UpazilaName</td>
                                                    <td>@loc.DistrictName</td>
                                                    <td>@loc.Latitude</td>
                                                    <td>@loc.Longitude</td>
                                                    <td><a href="@loc.ImageFileName" target="_blank">@loc.OnlyImageFileName</a></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                control_comments
                            </td>
                        </tr>
                        <tr style="border-left: none; border-right: none;">
                            <td colspan="3">
                                intentionally blank
                            </td>
                        </tr>

                        <tr>
                            <td colspan="3">
                                <h4>
                                    @if (prev_lang == "1")
                                    {<span>২. কারিগরি তথ্য</span>}
                                    else
                                    {<span>B. Technical Information</span>}
                                </h4>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="3">
                                <h5>
                                    @if (prev_lang == "1")
                                    {<span>২.১ বেজলাইন সম্পর্কিত তথ্য বা অবস্থা পর্যালোচনা</span>}
                                    else
                                    {<span>2.1 Discussion about baseline related information or situation</span>}
                                </h5>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="3">
                                <h4>
                                    @if (prev_lang == "1")
                                    {<span>3. দলিল প্রতিপালন</span>}
                                    else
                                    {<span>C. Deed Obligatory</span>}
                                </h4>
                            </td>
                        </tr>

                        <tr style="vertical-align: top; text-align: left;">
                            <td style="width: 250px;">
                                <b>
                                    @if (prev_lang == "1")
                                    {<span>i. প্রকল্পটি জাতীয় পানি নীতির সাথে সামঞ্জস্যপূর্ণ কিনা</span>}
                                    else
                                    {<span>i. Compatibility with National Water Policy</span>}
                                </b>
                            </td>
                            <td style="width: 500px; word-wrap: break-word;">
                                <table style="width:100%; border: 1px solid #808080; text-align: center;" border="1">
                                    <tr>
                                        <th>
                                            @if (prev_lang == "1")
                                            {<span>হ্যাঁ</span>}
                                            else
                                            {<span>Yes</span>}
                                        </th>
                                        <th>
                                            @if (prev_lang == "1")
                                            {<span>না</span>}
                                            else
                                            {<span>No</span>}
                                        </th>
                                        <th>
                                            @if (prev_lang == "1")
                                            {<span>আবেদনকারীর মন্তব্য</span>}
                                            else
                                            {<span>Applicant Comments</span>}
                                        </th>
                                        <th>
                                            @if (prev_lang == "1")
                                            {<span>কর্তৃপক্ষের মন্তব্য</span>}
                                            else
                                            {<span>Authority Comments</span>}
                                        </th>

                                        <th>
                                            @if (prev_lang == "1")
                                            {<span>নথি লিঙ্ক</span>}
                                            else
                                            {<span>Document Link</span>}
                                        </th>
                                    </tr>
                                    <tr>
                                        @{
                                            string yesTickMark = string.Empty;
                                            string noTickMark = string.Empty;

                                            if (pcd.CompatNWPYesNoId == 1)
                                            {
                                                yesTickMark = "✔";
                                                noTickMark = "";
                                            }
                                            else
                                            {
                                                yesTickMark = "";
                                                noTickMark = "✔";
                                            }

                                            <td>@yesTickMark</td>
                                            <td>@noTickMark</td>
                                            <td>@pcd.CompatibilityNWPApplicantCmt</td>
                                            <td>@pcd.CompatibilityNWPAuthorityCmt</td>
                                            <td><a href="~/images/CommonDetails/@pcd.CompatibilityNWPDocLink" target="_blank">@pcd.CompatibilityNWPDocLink</a></td>
                                        }
                                    </tr>
                                </table>
                                @if (pcd.CompatNWPYesNoId == 1)
                                {
                                    <table style="border: 1px solid #808080; width: 100%; text-align: center;" border="1">
                                        <tbody>@Html.Raw(cnwpd.ToString())</tbody>
                                    </table>                                    
                                }
                            </td>
                            <td style="word-wrap: break-word;">
                                control_comments
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>