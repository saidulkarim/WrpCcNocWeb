@using System.Globalization;

@{ ViewData["Title"] = "Certificate Download History";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('#tblAppList').DataTable({
            "sPaginationType": "full_numbers"
        });
    });
</script>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mb-3"> Application List</h4>
                @{ WrpCcNocWeb.Controllers.commonController cc = new WrpCcNocWeb.Controllers.commonController();
                    List<CcModDownloadCertificateHist> _cdhs = ViewBag.DownloadCertificateHist;
                    int count = 1;

                    <table id="tblAppList" class="table table-hover table-striped" style="width: 100%;">
                        <thead>
                            <tr>
                                <th class="text-center align-middle">Sl.</th>
                                <th class="nowrap text-center align-middle">Project Title</th>
                                <th class="nowrap text-center align-middle">Estimated Cost</th>
                                <th class="nowrap text-center align-middle">Date of Download</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CcModDownloadCertificateHist cdh in _cdhs)
                            {
                                <tr>
                                    <td class="text-center align-middle">@count</td>
                                    <td class="align-middle text-left">@cdh.CcModAppProjectCommonDetail.ProjectName</td>
                                    <td class="align-middle text-right">BDT @cdh.CcModAppProjectCommonDetail.ProjectEstimatedCost</td>
                                    <td class="align-middle text-center">@cdh.DownloadDateTime.Value.ToString("dd MMM, yyyy HH:mm", CultureInfo.GetCultureInfo("en-US"))</td>
                                </tr>

                                count++;
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>